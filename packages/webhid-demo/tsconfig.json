{
	"extends": "../../tsconfig.base.json",
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*", "dist/**"],
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"@logitech-mx-creative-console/webhid-demo": ["./src/index.ts"]
		},
		"lib": ["es6", "dom"],
		"types": ["w3c-web-hid"],
		"module": "Node16",
		"moduleResolution": "Node16"
	},
	"references": [
		{
			"path": "../core"
		},
		{
			"path": "../webhid"
		},
	]
}
